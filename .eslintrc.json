{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "webextensions": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "comma-dangle": ["error", "never"],
    "arrow-parens": ["error", "as-needed"],
    "object-curly-spacing": ["error", "always"],
    "max-len": ["warn", { "code": 100, "ignoreComments": true }]
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    ".bmad/",
    "web-bundles/"
  ]
}

