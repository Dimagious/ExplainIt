{
  "name": "explainit-extension",
  "private": true,
  "scripts": {
    "test": "jest --coverage --forceExit",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "*.js",
      "!*.test.js"
    ]
  }
}
